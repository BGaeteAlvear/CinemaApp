<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <Button
            android:text="Registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/btnRegistrar" android:layout_marginBottom="0dp"
            android:textSize="18sp" android:background="@color/colorAccent" android:padding="18dp"
            android:textColor="@android:color/white" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:id="@+id/editText6" android:layout_marginTop="243dp"
            android:layout_marginStart="0dp" android:hint="Nombre" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignParentStart="true" android:id="@+id/editText7" android:layout_marginStart="0dp"
            android:layout_below="@+id/editText6" android:hint="Contraseña"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_below="@+id/editText7" android:id="@+id/editText8"
            android:hint="Repita Contraseña" android:layout_marginTop="1dp" android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_below="@+id/editText8" android:id="@+id/editText9"
            android:hint="Email"/>
    <TextView
            android:text="REGISTRO DE NUEVO USUARIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/textView2" android:layout_marginTop="178dp" android:layout_marginLeft="65dp"
            android:textStyle="bold" android:textSize="18sp" android:textColor="@color/colorAccent"/>
</RelativeLayout>