<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
                     android:layout_height="150dp" xmlns:cardview="http://schemas.android.com/apk/res-auto"
                     android:layout_margin="5dp"
                     cardview:cardCornerRadius="7dp"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/movie_img"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#2d2d2d"
                android:layout_margin="3dp"
        />
        <TextView
                android:id="@+id/movie_titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:textColor="#2d2d2d"
                android:textSize="14sp"
                android:gravity="top"
                android:text="TITULO PELICULA"
                android:layout_marginTop="20dp"

                android:textStyle="bold"/>
        <TextView
                android:text="Clasificacion :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="156dp" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" android:id="@+id/textView3" android:layout_marginTop="50dp"
                android:layout_marginLeft="156dp"/>
        <TextView
                android:text="DuraciÃ³n : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="156dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:id="@+id/textView4" android:layout_marginBottom="60dp"
                android:layout_marginLeft="156dp"/>
        <TextView
                android:id="@+id/movie_clasificacion"
                android:text="valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginEnd="81dp" android:layout_marginTop="50dp"
                android:layout_marginRight="81dp"
                android:layout_marginLeft="250dp"/>
        <TextView
                android:text="duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4" android:id="@+id/movie_duracion"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="260dp"
                android:layout_marginBottom="60dp"/>
        <TextView
                android:text="Horarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_horario"
                android:layout_marginTop="94dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="156dp"
                android:layout_marginStart="156dp"
                android:layout_alignParentLeft="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" cardview:srcCompat="@android:drawable/btn_dialog"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp" android:layout_alignParentBottom="true" android:id="@+id/BtnEliminar"
                android:layout_marginBottom="11dp" android:layout_marginRight="13dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>