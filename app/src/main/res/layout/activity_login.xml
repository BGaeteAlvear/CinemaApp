<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/bg">

    <Button
            android:text="Ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/btnIngresar" android:layout_marginBottom="186dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:background="@color/colorPrimaryDark" android:padding="18dp" android:textSize="18sp"
            android:textColorLink="@color/colorAccent" android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentBottom="true" android:id="@+id/edit_email"
            android:layout_marginBottom="307dp" android:textColorLink="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:hint="Ingrese Email" android:textColorHint="@android:color/white"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignParentBottom="true" android:id="@+id/edit_password"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="257dp" android:textColor="@android:color/white"
            android:layout_alignParentStart="true" android:hint="Contraseña"
            android:textColorHint="@android:color/white" android:layout_marginStart="0dp"/>
    <TextView
            android:text="Registarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/RegistrarTxV" android:layout_marginBottom="156dp"
            android:textColor="@android:color/white" android:textStyle="bold"/>
    <TextView
            android:text="Recordar Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/ctextView3"
            android:layout_alignStart="@+id/RegistrarTxV" android:layout_marginBottom="135dp"
            android:layout_marginStart="-31dp" android:textColor="@android:color/white"/>
</RelativeLayout>