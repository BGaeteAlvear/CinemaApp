<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity">

    <Button
            android:text="GUARDAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="425dp"
            tools:layout_editor_absoluteX="139dp" android:id="@+id/btnGuardar"
            android:layout_alignParentBottom="true" android:layout_marginBottom="65dp"
            android:textColor="@android:color/white" android:background="@android:color/black"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    <Button
            android:text="CANCELAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnCancelar" android:layout_marginBottom="14dp"
            android:layout_marginLeft="0dp" android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="NUEVA PELICULA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="24dp"
            android:id="@+id/textView6" android:layout_marginTop="50dp" android:layout_marginRight="24dp"
            android:textStyle="bold" android:textSize="18sp" android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/txtPelicula"
            android:layout_marginTop="105dp" android:layout_marginLeft="0dp" android:hint="Pelicula"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:id="@+id/txtDuracion"
            android:layout_marginTop="156dp" android:layout_marginStart="0dp" android:hint="Duracion"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:id="@+id/txtHorario"
            android:layout_marginTop="210dp" android:hint="Horarios y Fechas"/>
    <RadioGroup
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="35dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="142dp"
            android:layout_marginLeft="35dp">
        <RadioButton
                android:text="+14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb14" android:layout_weight="1"/>
        <RadioButton
                android:text="+18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb18" android:layout_weight="1"/>
        <RadioButton
                android:text="+21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb21" android:layout_weight="1"/>
        <RadioButton
                android:text="TE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbTE" android:layout_weight="1"/>
    </RadioGroup>
</RelativeLayout>